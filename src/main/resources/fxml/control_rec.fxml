<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<VBox alignment="CENTER" spacing="5.0" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.github.xitren.fx.signal_ui.controllers.RECController">
   <children>
      <Label fx:id="name" alignment="CENTER" contentDisplay="CENTER" maxWidth="1.7976931348623157E308" prefHeight="27.0" prefWidth="159.0" text="%rec_name" />
      <TextField fx:id="value" alignment="CENTER" maxWidth="1.7976931348623157E308" onKeyPressed="#OnKey" />
      <Pane fx:id="pane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="150.0" prefWidth="150.0">
         <children>
            <Circle fx:id="back" centerX="75.0" centerY="75.0" fill="DODGERBLUE" onMouseClicked="#OnMousePressed" onMouseDragged="#OnMouseMoved" radius="75.0" stroke="BLACK" strokeType="INSIDE" />
            <Circle fx:id="selector" centerX="75.0" centerY="121.0" fill="WHITE" radius="22.0" stroke="BLACK" strokeType="INSIDE" />
         </children>
      </Pane>
      <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#OnToZero" prefHeight="25.0" prefWidth="150.0" text="%rec_set_to_zero" />
   </children>
   <padding>
      <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
   </padding>
</VBox>
